<%
# we arrive here through the new method of the asset controller
# @asset always exists
# if there is a folder_id, we are in a subdir, otherwise folder_id is nil
if @asset.folder_id
  folder=Folder.find_by_id(@asset.folder_id)
  title="Chargement d'un document au sein du répertoire #{folder.name} (numéro #{folder.id})".html_safe
else
  title="Chargement d'un document racine"
end

%>
 <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"><%= title %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render 'form' %>
      </div>
    </div>
  </div>