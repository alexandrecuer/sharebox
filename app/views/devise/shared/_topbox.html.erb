<% 
current_uri = request.env['PATH_INFO']
new_registration_class = new_session_class = new_password_class = "nav-link"
new_registration_class = "#{new_registration_class} active" if current_uri == new_registration_path(resource_name)
new_session_class = "#{new_session_class} active" if current_uri == new_session_path(resource_name)
new_password_class = "#{new_password_class} active" if current_uri == new_password_path(resource_name)
%>

<center><%= image_tag 'colibri.jpg', size: '100x100' %><%= t('sb.site_name') %><br>
<div class="card text-center" style="width: 32rem; background-color: #e3f2fd;">
  <div class="card-header">
    <ul class="nav nav-tabs card-header-tabs">
      <li class="nav-item">
        <%= link_to  t('sb.signup'), new_registration_path(resource_name), class: new_registration_class %>
      </li>
      <li class="nav-item">
        <%= link_to t('sb.login'), new_session_path(resource_name), class: new_session_class %>
      </li>
      <li class="nav-item">
        <%= link_to t('sb.passwordlost'), new_password_path(resource_name), class: new_password_class %>
      </li>
    </ul>
  </div>

<% if devise_error_messages! != "" %>
  <div class="alert alert-danger" role="alert"><%= devise_error_messages! %></div>
<% end %>

<% if notice %>
  <div class="alert alert-success" role="alert"><p class="notice"><%= notice.html_safe %></p></div>
<% end %>