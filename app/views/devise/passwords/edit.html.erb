<%= render "devise/shared/topbox" %>
<h2><%= t('sb.update') %>  <%= t('sb.password') %></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.label t('sb.password') %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>&nbsp;<%= t('sb.password_min_length') %>)</em>
    <% end %><br />
    <%= f.password_field :password, autofocus: true, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label t('sb.password_confirmation') %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "#{t('sb.update')} #{t('sb.password')}" %>
  </div>
<% end %>

</div>
</center>
