<% if @to_be_shared_folder %>
    <%= form_for @shared_folder, url: shared_folders_path do |f| %>
        <small><%= MAIN["share_label"] %></small><br>
        <%= f.text_field :share_email, size:50 %>
        <%= f.submit MAIN["share"].to_s+"'"+@to_be_shared_folder.name+"'" %>
        <%= f.button MAIN["reset"], type: 'reset' %>
      
        <%= f.hidden_field :folder_id %>     
        <br><br>
    <% end %>
<% end %>