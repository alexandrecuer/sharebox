<%= render "devise/shared/topbox" %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="field">
    <%= f.label t('sb.mail') %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label t('sb.password') %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>
  <% if devise_mapping.rememberable? -%>
	<div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label t('sb.remember_me') %>
	</div>
  <% end -%>
  <div class="actions">
    <%= f.submit t('sb.login') %>
  </div>
<% end %>

</div>
</center>