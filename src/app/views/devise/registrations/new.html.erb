<%= render "devise/shared/topbox" %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class="field">
    <%= f.label t('sb.mail') %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label t('sb.password') %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>&nbsp;<%= t('sb.password_min_length') %>)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label t('sb.password_confirmation') %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit t('sb.signup') %>
  </div>
<% end %>

</div>
</center>
